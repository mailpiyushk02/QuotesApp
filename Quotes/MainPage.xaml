<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quotes.MainPage">

    <Grid x:Name="backgroundGradient">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStopCollection>
                    <GradientStop Offset="0" Color="#051937"/>
                    <GradientStop Offset="0.25" Color="#004d7a"/>
                    <GradientStop Offset=".5" Color="#008793"/>
                    <GradientStop Offset=".75" Color="#00bf72"/>
                    <GradientStop Offset="1" Color="#a8eb12"/>
                </GradientStopCollection>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Margin="25"
              RowDefinitions=".8*,.2*">
            <Label x:Name="quote"
                   Text="They don't make bugs like Bunny anymore. - Olav"
                   TextColor="White"
                   FontSize="50"
                   FontFamily="MainFont"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"/>
            <Button x:Name="btnGenerateQuote" Grid.Row="1"
                    BackgroundColor="Black"
                    Opacity=".4"
                    Text="Get New Quote"
                    Clicked="btnGenerateQuote_Clicked"/>
        </Grid>
        
    </Grid>

</ContentPage>
